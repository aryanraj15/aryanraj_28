import React, { useEffect, useState } from 'react';
import MyModal from './MyModal'; // Make sure to provide the correct path

const NextPage = () => {
  const [modalOpen, setModalOpen] = useState(false);

  useEffect(() => {
    // This will open the modal when the component mounts
    setModalOpen(true);

    // Optionally, you can close the modal after a certain delay
    const closeModalTimeout = setTimeout(() => {
      setModalOpen(false);
    }, 5000); // Adjust the delay (in milliseconds) as needed

    return () => clearTimeout(closeModalTimeout); // Cleanup on unmount
  }, []);

  const handleModalClose = () => {
    setModalOpen(false);
  };

  return (
    <div>
      {/* Other content on your page */}
      <MyModal open={modalOpen} handleClose={handleModalClose} />
    </div>
  );
};

export default NextPage;
