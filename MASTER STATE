import React, { useState } from 'react';
import { Card, CardContent, Typography, TextField, Button } from '@mui/material';
import Autocomplete from '@mui/material/Autocomplete';

const EducationCard = ({ education, index }) => {
  const degrees = ['Degree 1', 'Degree 2', 'Degree 3']; // Add your own degree options

  return (
    <Card>
      <CardContent>
        <Typography variant="h5" component="div">
          {`Education ${index + 1}`}
        </Typography>
        <TextField label="School Name" variant="outlined" style={{ margin: '10px 0' }} />
        <Autocomplete
          options={degrees}
          renderInput={(params) => <TextField {...params} label="Degree" variant="outlined" />}
          style={{ margin: '10px 0' }}
        />
        <TextField label="Field of Study" variant="outlined" style={{ margin: '10px 0' }} />
        <TextField label="Overall GPA" variant="outlined" style={{ margin: '10px 0' }} />
      </CardContent>
    </Card>
  );
};

const EducationForm = () => {
  const [educations, setEducations] = useState([{}]);

  const handleAddAnother = () => {
    setEducations([...educations, {}]);
  };

  const handleDelete = (index) => {
    setEducations(educations.filter((_, i) => i !== index));
  };

  return (
    <div>
      {educations.map((education, index) => (
        <div key={index}>
          <EducationCard education={education} index={index} />
          <Button variant="contained" color="secondary" onClick={() => handleDelete(index)} style={{ margin: '10px' }}>
            DELETE
          </Button>
        </div>
      ))}
      <Button variant="contained" color="primary" onClick={handleAddAnother} style={{ margin: '10px' }}>
        ADD ANOTHER
      </Button>
    </div>
  );
};

export default EducationForm;
