const [numberOfDays, setNumberOfDays] = React.useState(0);
<DatePicker
  margin="0"
  id="LeaveStartDate"
  name="LeaveStartDate"
  minDate={today}
  label="Leave Start Date"
  sx={{ width: "100%" }}
  inputFormat="DD/MM/YYYY"
  renderInput={(params) => (
    <TextField
      fullWidth
      margin="0"
      required
      {...params}
      onChange={(e) => {
        formik.handleChange(e);
        const startDate = new Date(e.target.value);
        const endDate = new Date(formik.values.LeaveEndDate);
        const daysDifference = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
        setNumberOfDays(daysDifference);
      }}
    />
  )}
/>

<DatePicker
  margin="0"
  id="LeaveEndDate"
  name="LeaveEndDate"
  minDate={today}
  label="Leave End Date"
  sx={{ width: "100%" }}
  inputFormat="DD/MM/YYYY"
  renderInput={(params) => (
    <TextField
      margin="0"
      required
      {...params}
      onChange={(e) => {
        formik.handleChange(e);
        const startDate = new Date(formik.values.LeaveStartDate);
        const endDate = new Date(e.target.value);
        const daysDifference = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
        setNumberOfDays(daysDifference);
      }}
    />
  )}
/>

<TextField
  margin="0"
  id="numberOfDays"
  name="numberOfDays"
  label="Number of Days"
  value={numberOfDays}
  sx={{ width: "100%" }}
  disabled
/>
