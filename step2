function Step2(props) {

    const classes = useStyles();
    const [expand, setExpand] = useState(false);
    const [educations, setEducations] = useState([{}]);
    const [certificates, setCertificates] = useState([{}]);

    if (props.currentStep !== 2) {
        return null;
    }


    const handleAddAnother = () => {
        setEducations([...educations, {}]);
    };
    const handleAddAnotherCertificate = () => {
        setCertificates([...certificates, {}]);
    };

    const handleDelete = (index) => {
        setEducations(educations.filter((_, i) => i !== index));
    };
    const handleDeleteCertificate = (index) => {
        setCertificates(certificates.filter((_, i) => i !== index));
    };

    return (
        <>
            <div style={{ padding: "0px 60px", marginBottom: "5px" }}>
                <Accordion
                    expand={expand}
                    onChange={() => setExpand(!expand)}
                    sx={{ margin: "10px" }}
                    classes={{ root: classes.accordianRoot }}
                    disableGutters={true}
                >
                    <AccordionSummary
                        sx={{ m: 0 }}
                        expandIcon={
                            <ExpandMoreIcon
                                sx={{ color: expand === true ? "white" : "#2169B2" }}
                            />
                        }
                        style={{
                            background: expand === true ? "#2169B2" : "#EFF7FF",
                            color: expand === true ? "white" : "#2169B2",
                            fontWeight: "bold",
                            margin: "auto",
                        }}
                    >
                        <Typography sx={{ fontWeight: "bold" }}>EDUCATIONAL DETAILS </Typography>
                    </AccordionSummary>

                    <AccordionDetails>
                        {/* <ThemeProvider theme={theme}> */}
                        <div style={{ color: "red", marginBottom: "15px", fontSize: "14px" }}>
                            <p><b>Note:</b> All fields are mandatory</p>
                        </div>
                        <div>
                            <Grid>
                                <EducationDetailsCard val="Matriculation"> </EducationDetailsCard>
                                <EducationDetailsCard val="Intermediate/Diploma"></EducationDetailsCard>
                                <GraduationDetailsCard val="Graduation" ></GraduationDetailsCard>
                                <Grid item xs={12} sm={3} md={3} lg={3}>
                                    {educations.map((education, index) => (
                                        <div key={index}>
                                            <EducationCard education={education} index={index} />
                                            <Button
                                                variant="contained" color="error"
                                                onClick={() => handleDelete(index)}
                                                style={{ margin: '10px' }}>
                                                DELETE
                                            </Button>
                                        </div>
                                    ))}
                                </Grid>
                                <Grid item xs={12} sm={3} md={3} lg={3}>

                                </Grid>
                                <Grid item xs={12} sm={3} md={3} lg={3}>
                                    <Button
                                        direction="row"
                                        variant="contained"
                                        color="primary"
                                        onClick={handleAddAnother}
                                        style={{ margin: '10px' }}>
                                        ADD ANOTHER
                                    </Button>
                                </Grid>
                            </Grid>

                        </div>
                        {/* </ThemeProvider> */}
                    </AccordionDetails>
                </Accordion>
            </div>


            <div style={{ padding: "0px 60px", marginBottom: "5px" }}>
                <Accordion
                    expand={expand}
                    onChange={() => setExpand(!expand)}
                    sx={{ margin: "10px" }}
                    classes={{ root: classes.accordianRoot }}
                    disableGutters={true}
                >
                    <AccordionSummary
                        sx={{ m: 0 }}
                        expandIcon={
                            <ExpandMoreIcon
                                sx={{ color: expand === true ? "white" : "#2169B2" }}
                            />
                        }
                        style={{
                            background: expand === true ? "#2169B2" : "#EFF7FF",
                            color: expand === true ? "white" : "#2169B2",
                            fontWeight: "bold",
                            margin: "auto",
                        }}
                    >
                        <Typography sx={{ fontWeight: "bold" }}>CERTIFICATIONS (if any) </Typography>
                    </AccordionSummary>


                    <AccordionDetails>
                        {/* <ThemeProvider theme={theme}> */}
                        <div style={{ color: "red", marginBottom: "15px", fontSize: "14px" }}>
                            <p><b>Note:</b> All fields are mandatory</p>
                        </div>
                        <div>
                            <Grid>
                                <Grid item xs={12} sm={3} md={3} lg={3}>
                                    {certificates.map((certificate, index) => (
                                        <div key={index}>
                                            <CertificateCard certificate={certificate} index={index} />
                                            <Button
                                                variant="contained" color="error"
                                                onClick={() => handleDeleteCertificate(index)}
                                                style={{ margin: '10px' }}>
                                                DELETE
                                            </Button>
                                        </div>
                                    ))}
                                </Grid>
                                <Grid item xs={12} sm={3} md={3} lg={3}>

                                </Grid>
                                <Grid item xs={12} sm={3} md={3} lg={3}>
                                    <Button
                                        direction="row"
                                        variant="contained"
                                        color="primary"
                                        onClick={handleAddAnotherCertificate}
                                        style={{ margin: '10px' }}>
                                        ADD ANOTHER
                                    </Button>
                                </Grid>
                            </Grid>

                        </div>
                        {/* </ThemeProvider> */}
                    </AccordionDetails>
                </Accordion>
            </div>

            <div style={{ padding: "0px 60px", marginBottom: "5px" }}>
                <Accordion
                    expand={expand}
                    onChange={() => setExpand(!expand)}
                    sx={{ margin: "10px" }}
                    classes={{ root: classes.accordianRoot }}
                    disableGutters={true}
                >
                    <AccordionSummary
                        sx={{ m: 0 }}
                        expandIcon={
                            <ExpandMoreIcon
                                sx={{ color: expand === true ? "white" : "#2169B2" }}
                            />
                        }
                        style={{
                            background: expand === true ? "#2169B2" : "#EFF7FF",
                            color: expand === true ? "white" : "#2169B2",
                            fontWeight: "bold",
                            margin: "auto",
                        }}
                    >
                        <Typography sx={{ fontWeight: "bold" }}> ADDITIONAL ATTACHMENTS (if any)</Typography>
                    </AccordionSummary>

                    <AccordionDetails>
                        <Card>

                        <Button  sx={{alignItems:"center"}}component="label" size="medium" variant="outlined" startIcon={<CloudUploadIcon />}>
                            Upload All Documents
                            <VisuallyHiddenInput type="file" />
                        </Button>

                                  
                               
                        
                        </Card>



                    </AccordionDetails>
                </Accordion>
            </div>
        </>
    );
};

export default Step2;




